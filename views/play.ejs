<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto&display=swap"
      rel="stylesheet"
    />
    <link
      rel="shortcut icon"
      href="/images/icons/favicon.ico"
      type="image/png"
    />
    <link rel="stylesheet" href="css/play.css" />
    <title>QuickTriv - fun multi player quiz game</title>
  </head>
  <body>
    <!-- Header -->
    <header>
      <h1>QuickTriv</h1>
    </header>

    <main>
      <!-- Round section -->
      <section id="round">
        <p>Round 1</p>
      </section>

      <!-- Quiz content -->
      <section id="quiz_content">
        <h2 class="title">Lets play!</h2>
      </section>

      <!-- Leaderboard section -->
      <section id="leaderboard">
        <p>player 1</p>
        <p>player 2</p>
      </section>
    </main>

    <!-- Answer options -->
    <div id="input">
      <button id="sendA">A</button>
      <button id="sendB">B</button>
      <button id="sendC">C</button>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <!-- <script src="js/play.js"></script> -->
  </body>
</html>
